include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Portfolio | main page
    script(src="https://cdn.jsdelivr.net/npm/vue")
    script(src="https://cdn.jsdelivr.net/npm/vue-scrollto")
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")

  body
    .wrapper(id="wrapper")

      //- Welcome-Parallax wrapper -// 

      .welcome-section

        //- Parallax section -// 

        section.parallax.parallax__welcome
          .parallax__layer(data-speed="0.1")
            img(src=require("images/parallax/1.png")).parallax__image
          .parallax__layer(data-speed="0.15")
            img(src=require("images/parallax/2.png")).parallax__image
          .parallax__layer(data-speed="0.20")
            img(src=require("images/parallax/3.png")).parallax__image
          .parallax__layer(data-speed="0.25")
            img(src=require("images/parallax/4.png")).parallax__image
          .parallax__layer(data-speed="0.30")
            img(src=require("images/parallax/5.png")).parallax__image
          .parallax__layer(data-speed="0.35")
            img(src=require("images/parallax/6.png")).parallax__image
          //.parallax__layer(data-speed="0.40")
          //  img(src=require("images/parallax/7.png")).parallax__image

        //- Header + Hero section -//

        section.hero#hero-section
          .container
            header.header
              .header__logo
                a(href="#").logo БС
              .header__btns
                nav.menu.header__menu
                  - var menu = [['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться'], ['hero-section', 'about-section', 'values-section', 'works-section', 'reviews-section', 'feedback-section']];
                    ul.menu__list
                      each item, index in menu[0]
                        li.menu__item
                          a.menu__link(href="#" + menu[1][index] v-scroll-to="'#" + menu[1][index] + "'") #{item}
              .header__links
                - var icons = [["insta", "vk", "github"], ["https://www.instagram.com/qco_b/", "https://vk.com/id35518345", "https://github.com/julfy-bs/"]];
                ul.socials.header__socials
                  each item, link in icons[0]
                    li.socials__item
                      a(href=icons[1][link] target="_blank").socials__link
                        +icon(item, "socials__icon")


              a.hamburger-menu-link(href="#")#hamburger-menu-link
                .hamburger-menu-link__bars
              nav.hamburger-menu#hamburger-menu
                ul.menu__list
                  each item, index in menu[0]
                    li.menu__item
                      a.menu__link(href="#" + menu[1][index]) #{item}
                  - var icons = ['insta', 'vk', 'github'];
                ul.socials.hamburger-menu__socials
                  each item in icons
                    li.socials__item
                      a.socials__link(href="#" target="_blank")
                        +icon(`${item}`, 'socials__icon')
                a.close-button#close-nav-button(href="#")
                  +icon('remove', 'close-button__img', '20')

            .hero__content
              .user-data
                h4.user-data__desc Личный сайт <br> веб разработчика
                h1.user-data__name Богдан <br> Сутужко
                //- 1
            .hero__link-wrapper
              a(href="#about-section" v-scroll-to="'#about-section'").hero__bottom-btn.scroll-down-btn Скролл 
              .scroll-down__wrapper
                - var icons = ["scroll"]
                  each item in icons
                    +icon(item, "scroll-down-icon")

        //- About section -// 

        section.about-section.section#about-section
          .container
            .about
              .about__user-data
                .user-info
                  .user-info__avatar
                    .avatar
                      +image("content/user-me.jpg", "avatar-img")
                  .user-info__content
                    - 
                      var userdata = [
                        ["Проживаю:", "г. Москва"],
                        ["Возраст:", "23 года"],
                        ["Родился:", "13 декабря 1996"]
                      ];
                    table.user-info__data
                      tbody.user-info__data-body
                        each row in userdata
                          tr
                            td.first-td #{row[0]}
                            td.second-td #{row[1]}

              .about__content
                .about-top__content
                  .about__disclamer Привет, меня зовут
                  h2.about__title Богдан Сутужко
                  .about__desc
                    p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__ps
                  p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

      //- Main Content -// 

      main.maincontent

        //- Skills section -// 

        section.values#values-section 
          .container.values__container
            .values__wrapper
              .values__title
                .values__title-container
                  .values__title-text Чем я могу быть полезен вам
                  .values__content
                    p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
              .values__widget
                #skills-component

        //- Experience section -// 

        section.works#works-section
          .container.works__container
            .section-title.works__section-title Мои работы
            .works__content
              #slider-component

        //- Feedback-Parallax wrapper -//

        section.feedback-section

          //- Feedback-Parallax section -// 

          section.parallax.parallax__feedback

            .parallax__layer(data-speed="0.35")
              img(src=require("images/parallax/10.png")).parallax__image
            .parallax__layer(data-speed="0.45")
              img(src=require("images/parallax/11.png")).parallax__image
            .parallax__layer(data-speed="0.55")
              img(src=require("images/parallax/12.png")).parallax__image
            .parallax__layer(data-speed="0.65")
              img(src=require("images/parallax/13.png")).parallax__image

          //- Reviews section -// 

          section.reviews.section-half#reviews-section(@click="checkArrows" @touchend="checkArrows")
            .container.reviews__container
              .reviews__title
                h2.section__title Что обо мне говорят
                .reviews-slider__controls
                  button.reviews-slider__control.reviews-slider__control--left(@click="previous" :disabled='true')
                    +icon('arrow-down', 'reviews-slider__control-arrow-icon review-left-arrow__icon')
                  button.reviews-slider__control.reviews-slider__control--right(@click="next" :disabled='false')
                    +icon('arrow-down', 'reviews-slider__control-arrow-icon review-right-arrow__icon')
              flickity(ref="flickity" :options="flickityOptions").reviews-slider
                  .reviews-slider__item(v-for="review in reviews")
                    .reviews-slider__image
                      +icon('quote', 'reviews-slider__icon')
                    .quote
                      .quote__text  
                        p {{review.text}}
                      .quote__author
                        .user.user--horisontal
                          .user__avatar.avatar.avatar--small
                            img(:src="photoUrl(review.photo)").user__avatar-pic
                          .user__data
                            .user__name {{review.author}}
                            .user__occ {{review.occ}}

          //- Feedback(Form) section -// 

          section.feedback.section-half#feedback-section
            .container.feedback__container
              .feedback__wrapper
                h2.section__title.feedback__title Связаться со мной
                form.feedback__form.form
                  .form__row.form__row-double
                    label.form__block
                      .form__label Введите ваше имя
                      input(type="text" name="name" placeholder="Сутужко Богдан" required).form__input.form__input--name
                      - var icons = ["user"]
                        each item in icons
                          +icon(item, "user-icon, form__icon")
                      .form__error
                    label.form__block
                      .form__label Введите ваш email
                      input(type="email" name="name" placeholder="loftschool@study.com" required).form__input.form__input--email
                      - var icons = ["envelope"]
                        each item in icons
                          +icon(item, "envelope-icon, form__icon")
                      .form__error
                  .form__row
                    label.form__block
                      .form__label Сообщение к письму
                      textarea(name="comment" placeholder="Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса" required).form-input.form-input_textarea
                      - var icons = ["message"]
                        each item in icons
                          +icon(item, "message-icon, form__icon")
                  .form__row
                    input(type="submit" value="Отправить").form__button  

      //- Footer -// 

      footer.footer
        .container.footer__container

          .footer__copyright 
            .footer__copyright-col 
              .footer__copyright-year &copy; 2020
            .footer__copyright-userinfo
              .footer__copyright-name Богдан Сутужко
              .footer__data-text Личный сайт веб-разработчика
          .footer__data
            .footer__btns
              nav.menu.menu--color-white.footer__data-menu
                ul.menu__list
                  each item, index in menu[0]
                    li.menu__item
                      a.menu__link(href="#" + menu[1][index] v-scroll-to="'#'" + menu[1][index] + "'") #{item}
            .footer__data-content
              .footer__data-col   
                .footer__data-text
                  p  Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                .footer__data-socials
                  - var icons = [["insta", "vk", "github"], ["https://www.instagram.com/qco_b/", "https://vk.com/id35518345", "https://github.com/julfy-bs/"]];
                  ul.socials.socials--round-borders
                    each item, link in icons[0]
                      li.socials__item
                        a(href=icons[1][link] target="_blank").socials__link
                          +icon(item, "socials__icon")
              .footer__data-col
                .text-quote
                  .text-quote__text
                    p Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает, где вы живете.
                  .text-quote__author Martin Golding  

    include ./templates/entry.pug
