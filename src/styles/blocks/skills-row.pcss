.skills-row__title {
  margin-bottom: 26px;
  font-size: 24px;
  font-weight: 700;
  color: #ffffff;

  @include tablets {
    text-align: center;
  }

  @include phones {
    font-size: 18px;
  }
}

.skills-row__list {
  display: flex;
  flex-wrap: wrap;
  margin-left: -4%;

  @include tablets {
    justify-content: center;
  }

  @include phones {
    justify-content: center;
  }
}

.skills-row__item {
  margin-left: 4%;
}