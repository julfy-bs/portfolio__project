.technology-marker__list {
  display: flex;
  justify-content: space-evenly;
  // width: 200px;
  align-items: center;
}

.technology-marker__item-name {
  opacity: 0.7;
  color: #2f3642;
  font-family: "Open Sans - Semibold";
  font-size: 15px;
  font-weight: 400;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  background: rgb(133, 158, 194, 0.1) ;
  padding: 2% 5%;
  margin-right: 10px;
  min-width: 80px;
  text-align: center;

  &:last-child {
    margin: 0;
  }

}