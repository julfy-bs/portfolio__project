.scroll-down-icon {
  max-width: 100%;
  max-height: 100%;
  fill: currentColor;
  transform: translate(0, 25%);
}

.scroll-down__wrapper {
  width: 20px;
  height: 30px;
  position: absolute;
  bottom: 1.5%;
  left: 52%;
  transform: translate(-50%);

  @include desktop {
    left: 53%;
  }

  @include tablets {
    left: 55%;
  }

  @include phones {
    left: 60%;
  }

  
}