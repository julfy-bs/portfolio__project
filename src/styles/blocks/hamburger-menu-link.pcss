.hamburger-menu-link {
	vertical-align: middle;
	position: relative;
	height: 22px;
	align-items: center;
	display: none;

	@include tablets {
		display: inline-flex;
	}
}

.hamburger-menu-link__bars {
	&, &:before, &:after {
		background: currentColor;
		width: 24px;
		height: 4px;
		border-radius: 2px;
	}

	&:before, &:after {
		content: "";
		display: block;
		position: absolute;
	}

	&:before {
		top: 0;
	}

	&:after {
		bottom: 0;
	}
}
