.socials {
  display: flex;
}

.socials__item {
  margin-right: 40px;
  width: 30px;
  height: 30px;

  &:last-child {
    margin-right: 0;
  }
}

.socials__link {
  width: 100%;
  height: 100%;
  display: block;
}

.socials__icon {
  width: 100%;
  height: 100%;
  fill: currentColor;
  opacity: .35;

  &:hover {
    fill: #ff9a00;
    opacity: 1;
  }
}